@* ADD dialog box Start *@

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog boxtop">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Add GSM Operator Group</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Name</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" id="name" name="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Notes</label>
                            </div>
                            <div class="col-sm-8">
                                <input type="text" id="note" name="" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4">
                                <label style="">Dealer</label>
                            </div>
                            <div class="col-sm-8">
                                <select class="selector1" id="select-user" style="height:35px;">
                                    <option>Dealer</option>
                                    <option>SubDealer</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <label style="">Operator Entry</label>
                            </div>
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-md-8 pdr0">
                                        <input type="text" id="" name=""  class="oprtext" />
                                    </div>
                                    <div class="col-md-4 pdl0">
                                       <input type="submit" name="submit" id="entry" value="Add New" class="oprety" style="" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div><!--col-md-7-->
                    <div class="col-md-4">
                        <h6 class="text-center">GSM Operator</h6>
                        <select name="" multiple style="width:100%;height:185px;">
                            <option value="volvo">Volvo</option>
                            <option value="saab">Saab</option>
                            <option value="mercedes">Mercedes</option>
                            <option value="audi">Audi</option>
                            <option value="volvo">Volvo</option>
                            <option value="saab">Saab</option>
                            <option value="mercedes">Mercedes</option>
                            <option value="audi">Audi</option>
                            <option value="volvo">Volvo</option>
                            <option value="saab">Saab</option>
                            <option value="mercedes">Mercedes</option>
                            <option value="audi">Audi</option>
                        </select>
                    </div>
                    <div class="col-md-1 pt3" style="padding-top: 12%;">
                        <button><i class="fas fa-sort-up" style="font-size: 15px;"></i></button>
                        <button><i class="fas fa-sort-down" style="font-size: 15px;"></i></button>
                        <button><i class="fas fa-times"></i></button>
                    </div>
                </div>

            </div> <!--content model-->
            <div class="modal-footer" style="text-align:center">
                @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                <button class="btn text-center" id="" name="">Create</button>
                <button class="btn text-center" data-dismiss="modal">Cancel</button>
            </div>




            <!--row end-->
        </div>

    </div>
</div>
@* ADD dialog box END *@

